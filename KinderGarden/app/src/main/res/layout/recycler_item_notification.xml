<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recCardNotif"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recTitleNotif"
            android:text="Title"
            android:textColor="@color/levender"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/recPriorityNotif"
            android:text="priority"
            android:layout_toEndOf="@id/recTitleNotif"
            android:layout_marginTop="5dp"
            android:layout_marginStart="90dp"
            android:textAlignment="center"
            android:textColor="@color/levender"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/recDescNotif"
            android:text="desc"
            android:textColor="@color/levender"
            android:textSize="14sp"
            android:layout_below="@id/recTitleNotif"
            android:layout_marginStart="20dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:id="@+id/recDateNotif"
            android:text="desc"
            android:textColor="@color/levender"
            android:textSize="14sp"
            android:layout_below="@id/recTitleNotif"
            android:layout_marginStart="20dp"
            android:maxLines="1"
            android:layout_marginBottom="12dp"
            android:layout_toEndOf="@+id/recDescNotif"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>